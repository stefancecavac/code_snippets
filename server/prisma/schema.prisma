generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String                @id @default(uuid())
  username     String                @unique
  email        String                @unique
  password     String
  codeSnippets CodeSnippetQuestion[]
  answers      CodeSnippetAnswer[]
}

model CodeSnippetQuestion {
  id             String   @id @default(uuid())
  question       String
  language       String
  Questiondetail String
  questionCode   String   @db.Text
  answered       Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  answers CodeSnippetAnswer[]
}

model CodeSnippetAnswer {
  id         String   @id @default(uuid())
  answer     String
  answerCode String   @db.Text
  correct    Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  CodeSnippet   CodeSnippetQuestion? @relation(fields: [codeSnippetId], references: [id])
  codeSnippetId String?

  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}
